{
	"name": "nodejs-app-template",
	"version": "0.0.0",
	"description": "Node.js app template",
	"private": true,
	"main": "./src/main.ts",
	"scripts": {
		"start": "NODE_ENV=production node ./dist/src/main.js",
		"compile": "tsc",
		"preview": "node ./dist/src/main.js",
		"dev": "ts-node-esm ./src/main.ts",
		"vitest:check": "vitest --run --passWithNoTests --coverage",
		"prettier:fix": "prettier --write .",
		"prettier:check": "prettier --check .",
		"eslint:fix": "eslint --fix .",
		"eslint:check": "eslint --max-warnings 0 .",
		"typescript:check": "tsc --noEmit",
		"npm-audit:check": "npm audit --audit-level=low",
		"formatting:fix": "prettier --write .",
		"formatting:check": "prettier --check ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Rafal-Majewski/nodejs-app-template.git"
	},
	"author": "Rafa≈Ç Majewski",
	"license": "CC0-1.0",
	"bugs": {
		"url": "https://github.com/Rafal-Majewski/nodejs-app-template/issues"
	},
	"homepage": "https://github.com/Rafal-Majewski/nodejs-app-template#readme",
	"devDependencies": {
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.1",
		"@vitest/coverage-c8": "^0.26.2",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.5.0",
		"prettier": "^2.8.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4",
		"vitest": "^0.26.3"
	},
	"type": "module",
	"dependencies": {
		"dotenv": "^16.0.3",
		"envalid": "^7.3.1"
	}
}
